            <FontImageSource
                FontFamily="MaterialIconsOutlinedLatinRegular"
                Glyph="&#xe8b8;"
                Color="Black"
                Size="20" />
        </ShellContent.FlyoutIcon>
    </ShellContent>

    <ShellContent
        Title="Report"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="Report">
        <ShellContent.FlyoutIcon>
            <FontImageSource
                FontFamily="MaterialIconsOutlinedLatinRegular"
                Glyph="&#xe868;"
                Color="Black"
                Size="20" />
        </ShellContent.FlyoutIcon>
    </ShellContent>

    <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="About">
